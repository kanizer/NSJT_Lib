package com.plode.utils {	import flash.display.DisplayObject;	import flash.geom.Matrix;	import flash.geom.Point;			/**	 * @author ns	 */	public class Scaler 	{		public function Scaler()		{		}		public static function scale(obj : DisplayObject, w : int, h : int) : void		{			// SCALE W			obj.width = w;			obj.scaleY = obj.scaleX;			// CHECK SCALED HEIGHT			if(obj.height < h)			{				obj.height = h;				obj.scaleX = obj.scaleY;			}		}		public static function scaleFromCenter(ob : *, sx : Number, sy : Number = undefined) : void		{			if(!sy) sy = sx;						var ptRotationPoint : Point = new Point(ob.x + ob.width/2, ob.y + ob.height/2);						var m : Matrix = ob.transform.matrix;			m.tx -= ptRotationPoint.x;			m.ty -= ptRotationPoint.y;			m.scale( sx, sy );			m.tx += ptRotationPoint.x;			m.ty += ptRotationPoint.y;			ob.transform.matrix = m;		}	}}