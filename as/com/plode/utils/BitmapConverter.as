package com.plode.utils {	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.display.Sprite;		/**	 * @author ns	 */	public class BitmapConverter extends Sprite 	{		public function BitmapConverter()		{		}		public static function getBmp(obj : DisplayObject) : Bitmap		{			var bmpDat : BitmapData = new BitmapData( obj.width, obj.height, true, 0x000000 );			bmpDat.draw( obj );			var bmp : Bitmap = new Bitmap( bmpDat );			bmp.smoothing = true;								return bmp;		}	}}