package com.plode.utils {	import flash.display.DisplayObject;		import flash.filters.BitmapFilter;	import flash.filters.BitmapFilterQuality;	import flash.filters.DropShadowFilter;			/**	 * @author ns	 */	public class FilterUtil 	{		public function FilterUtil() 		{		}				public static function setShadow( dobj : DisplayObject, angle : int = 45) : void		{			var color : Number = 0x000000;//			var angle : Number = 45;			var alpha : Number = 0.8;			var blurX : Number = 8;			var blurY : Number = 8;			var distance : Number = 5;			var strength : Number = 0.65;			var inner : Boolean = false;			var knockout : Boolean = false;			var quality : Number = BitmapFilterQuality.LOW;			var filter : BitmapFilter = new DropShadowFilter( distance, angle, color, alpha, blurX, blurY, strength, quality, inner, knockout );			var myFilters : Array = new Array( );			myFilters.push( filter );			dobj.filters = myFilters;		}	}}